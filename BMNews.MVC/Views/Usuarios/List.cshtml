@model IEnumerable<BMNews.MVC.ViewModels.UsuarioViewModel>

@{
    ViewBag.Title = "Listar Usuário";
}

<div class="container">
    <div class="row">
        <div class="col-md-3 col-sm-4 sidebar">
            @Html.Partial("_MenuUsuario")
        </div>

        <div class="col-md-9 col-sm-8 ">
            <h1 class="page-header">
                Painel do Usuário
                <small> / Listar Usuário</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Painel do Usuário", "Index", "Usuarios")

                </li>
                <li class="active">Listar Usuário</li>
            </ol>

            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sobrenome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Login)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ativo)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sobrenome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Login)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ativo)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.UsuarioId }) |
                            @Html.ActionLink("Detalhes", "Details", new { id = item.UsuarioId }) |
                            @Html.ActionLink("Deletar", "Delete", new { id = item.UsuarioId })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>