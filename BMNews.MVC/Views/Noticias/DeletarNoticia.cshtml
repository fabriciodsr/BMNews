@model BMNews.MVC.ViewModels.NoticiaViewModel

@{
    ViewBag.Title = "Deletar Notícia";
}

<div class="container">
    <div class="row">
        <div class="col-md-3 col-sm-4 sidebar">
            @Html.Partial("_MenuUsuario")
        </div>

        <div class="col-md-9 col-sm-8 ">
            <h1 class="page-header">
                Painel do Usuário
                <small> / Deletar Notícia</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Painel do Usuário", "Index", "Usuarios")

                </li>
                <li>
                    @Html.ActionLink("Notícias", "MinhasNoticias", "Noticias")

                </li>
                <li class="active">Deletar Notícias</li>
            </ol>

            <h3>Você tem certeza que deseja deletar essa notícia?</h3>
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Titulo)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Titulo)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Conteudo)
                    </dt>

                    <dd>
                        @Html.Raw(Server.HtmlDecode(Convert.ToString(@Html.DisplayFor(model => model.Conteudo))))
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.PalavraChave)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.PalavraChave)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Disponivel)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Disponivel)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.UsuarioId)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Usuario.Nome)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Deletar" class="btn btn-default" />
                        <div class="btn btn-default">
                            @Html.ActionLink("Voltar para lista", "MinhasNoticias")
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
