@using BMNews.Domain.Entities
@using BMNews.MVC.ViewModels
@model BMNews.MVC.ViewModels.NoticiaViewModel

@{
    ViewBag.Title = "Detalhes da Notícia";
}

<body>
    <div class="container">
        <div class="col-lg-12">
            <h1 class="page-header">
                Detalhes da Notícia
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Página Inicial", "Index", "Home")
                </li>
                <li class="active">Detalhes da Notícia</li>
            </ol>
            <h1>@Html.DisplayFor(model => model.Titulo)</h1>
            <p class="lead">
                <i class="fa fa-user"></i> por @Html.DisplayFor(model => model.Usuario.Nome)
            </p>
            <hr>
            <p><i class="fa fa-calendar"></i> Postado em @Html.DisplayFor(model => model.DataCadastro)</p>
            <p><i class="fa fa-tags"></i> Tags: <a href=""><span class="badge badge-info">@Html.DisplayFor(model => model.PalavraChave)</span></a></p>
            <hr>
            <p class="lead">@Html.Raw(Server.HtmlDecode(Convert.ToString(@Html.DisplayFor(model => model.Conteudo))))</p>
            <br />
            <hr>
            <div class="pull-left">
                <div class="btn btn-default">
                    @Html.ActionLink("Voltar para lista", "Index", "Home")
                </div>
            </div>
            <div class="pull-right">
            </div>
        </div>
        <div class="col-md-3">
        </div>

    </div>
</body>