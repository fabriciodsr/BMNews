@using BMNews.Domain.Entities
@using BMNews.MVC.ViewModels
@model BMNews.MVC.ViewModels.NoticiaViewModel

@{
    ViewBag.Title = "Detalhes da Notícia";
}

<div class="container">
    <div class="row">
        <div class="col-md-3 col-sm-4 sidebar">
            @Html.Partial("_MenuAdmin")
        </div>

        <div class="col-md-9 col-sm-8 ">
            <h1 class="page-header">
                Administração do Site
                <small> / Detalhar Notícia</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Painel Administrador", "Index", "Usuarios")

                </li>
                <li>
                    @Html.ActionLink("Notícias", "List", "Noticias")

                </li>
                <li class="active">Detalhes da Notícia</li>
            </ol>

            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Titulo)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Titulo)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Conteudo)
                    </dt>

                    <dd>
                        @Html.Raw(Server.HtmlDecode(Convert.ToString(@Html.DisplayFor(model => model.Conteudo))))
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Disponivel)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Disponivel)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.UsuarioId)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Usuario.Nome)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.DataCadastro)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DataCadastro)
                    </dd>

                </dl>
            </div>
            <div class="btn btn-default">
                @Html.ActionLink("Editar Notícia", "Edit", new { id = Model.UsuarioId })
            </div>
            <div class="btn btn-default">
                @Html.ActionLink("Voltar para lista", "List")
            </div>
        </div>
    </div>
</div>