<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/2.5.1/css/froala_editor.pkgd.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/2.5.1/css/froala_style.min.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/2.5.1//js/froala_editor.pkgd.min.js"></script>
 
    <script src="~/Scripts/jquery.Jcrop.min.js"></script>
    <script src="~/scripts/jquery.unobtrusive-ajax.min.js"></script>

    <link rel="stylesheet" type="text/css" href="~/Content/FonteResponsiva.css">
    <link rel="stylesheet" type="text/css" href="~/Content/modern-business.css">
    <link rel="stylesheet" type="text/css" href="~/Content/BMNews.css">
    <link rel="stylesheet" type="text/css" href="~/Content/jquery.Jcrop.min.css">
    
    <link rel="icon" href="~/Images/favicon.ico"/>


</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <!-- You'll want to use a responsive image option so this logo looks good on devices - I recommend using something like retina.js (do a quick Google search for it and you'll find it) -->
            <a href="@Url.Action("index", "Home")" class="navbar-brand" style="padding-top: 10px">
                <img src="~/Images/logobmnews_59x33.jpg" class="img-responsive" />
            </a>
            @Html.ActionLink("Portal BMNews", "Index", new { controller = "Home" }, new { @class = "navbar-brand" })
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav navbar-right">
                <li id="about">
                    @Html.ActionLink("Sobre", "About", "Home")
                </li>
                <li id="FaleConosco">
                    @Html.ActionLink("Fale Conosco", "Contact", "Home")
                </li>
                <li id="Cadastro">
                    @Html.ActionLink("Cadastrar", "Create", "Home")
                </li>

                @if (User.IsInRole("admin") && Session["nomeUsuarioLogado"] != null)
                {

                    <li id="cidades" class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <strong>
                                @Session["nomeUsuarioLogado"].ToString()
                            </strong>
                            <span class="glyphicon glyphicon-user"></span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li id="Administracao">
                                @Html.ActionLink("Administração do Site", "Index", "Administradores")
                            </li>
                            <li id="Sair">
                                @Html.ActionLink("Sair", "LogOff", "Login")
                            </li>

                        </ul>
                    </li>
                }
                else if (User.IsInRole("comum") && Session["nomeUsuarioLogado"] != null)
                {

                    <li id="cidades" class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <strong>
                                @Session["nomeUsuarioLogado"].ToString()
                            </strong>
                            <span class="glyphicon glyphicon-user"></span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li id="PerfildoUsuario">
                                @Html.ActionLink("Perfil do Usuário", "Index", "Usuarios")
                            </li>
                            <li id="Sair">
                                @Html.ActionLink("Sair", "LogOff", "Login")
                            </li>

                        </ul>
                    </li>
                }
                else
                {
                    <li class="pull-right" id="Login">
                        <a href="#" data-toggle="modal" data-target="#login">
                            Login
                            <span class="glyphicon glyphicon-user"></span>
                        </a>
                    </li>
                }





            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</nav>

@RenderBody()


@Html.Partial("_Login")



<div id="rodape" class="container-fluid">
    <hr>
    <footer>
        <div class="footer" id="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="textMedium">© Copyright Portal BMNews - 2017 - Todos os direitos reservados</h3>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</div>
<!-- /.container -->

</body>
</html>
